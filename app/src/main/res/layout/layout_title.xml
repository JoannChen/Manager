<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ic_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px90"
    android:background="@drawable/draw_border_b">

    <!--共用标题栏-->


    <!--左侧图标按钮-->

    <ImageView
        android:id="@id/iv_left"
        style="@style/Back_Button_Style"
        android:contentDescription="@string/app_icon" />


    <!--左侧文字-->

    <TextView
        android:id="@id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/px20"
        android:src="@mipmap/btn_back"
        android:text="@string/app_text"
        android:visibility="gone" />

    <!--标题文字-->

    <TextView
        android:id="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLength="12"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/px36" />


    <!--右侧图标按钮-->

    <ImageView
        android:id="@id/iv_right"
        android:layout_width="@dimen/px100"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/px45"
        android:contentDescription="@string/app_icon"
        android:src="@mipmap/icon_order_choice"
        android:visibility="gone" />

    <!--右侧文字-->

    <TextView
        android:id="@id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/px20"
        android:text="@string/app_text"
        android:textColor="@color/gray_font"
        android:visibility="gone" />


</RelativeLayout>