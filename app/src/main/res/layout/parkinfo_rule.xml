<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px600"
    android:layout_height="@dimen/px68"
    android:layout_centerHorizontal="true">

    <!-- 停车场详情-收费规则 -->

    <TextView
        android:id="@id/text_1"
        android:layout_width="@dimen/px250"
        android:layout_height="match_parent"
        android:background="@drawable/draw_border_l_b"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/gray_font"
        android:textSize="@dimen/px24" />

    <TextView
        android:id="@id/text_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/text_1"
        android:background="@drawable/draw_border_r_b"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black_font"
        android:textSize="@dimen/px24" />

</RelativeLayout>