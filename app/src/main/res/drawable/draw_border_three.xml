<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 给View设置下、左、右边框（停车场详情中的收费规则） -->
    <item>
        <shape>

            <!-- 边框颜色 -->
            <solid android:color="@color/red_bg" />
        </shape>
    </item>
   
    <!-- 给View的下 左 右设置2px的边框 -->
    <item
        android:bottom="@dimen/px2"
        android:left="@dimen/px2"
        android:right="@dimen/px2">
        <shape>

            <!-- View填充颜色 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>