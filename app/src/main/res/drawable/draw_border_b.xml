<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 标题栏带边框的背景 -->
    <item>
        <shape>
            <!-- 边框颜色 -->
            <solid android:color="@color/line_gray" />
        </shape>
    </item>

    <!-- 给View的下 左 右设置2px的边框 -->
    <item android:bottom="@dimen/px2">
        <shape>
            <!-- View填充颜色 -->
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>